/// Local .nlsp.json
{
    "clangd": {
        "arguments": [],
        "fallbackFlags": [
            "-std=c++20"
        ]
    },
    "rust_analyzer": {
        "updates.channel": "nightly", // stable, nightly
        "diagnostics.disabled": [
            "inactive-code"
        ],
        "inlayHints.typeHints.enable": true,
        "inlayHints.parameterHints.enable": true,
        "procMacro.enable": true,
        "checkOnSave.enable": true,
        "checkOnSave.extraArgs": [
            "--target-dir",
            "target/check"
        ]
    },
    "Lua": {
        "runtime.version": "LuaJIT", // "Lua 5.2", "LuaJIT"
        "workspace.library": [],
        "diagnostics.disable": [
            "inject-field",
            "missing-fields",
            "undefined-field"
        ]
    }
}
