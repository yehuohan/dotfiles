snippet qwinui "qt gui with ui file"
#include <QMainWindow>
#include "ui_${2:mainwindow}.h"

namespace Ui {
class $1;
}

class ${1:MainWindow} : public QMainWindow {
    Q_OBJECT
public:
    explicit $1(QWidget *parent = Q_NULLPTR);
    ~$1();

private:
    Ui::$1* ui;
};

$1::$1(QWidget *parent) :
    QMainWindow(parent),
    ui(new Ui::$1)
{
    ui->setupUi(this);
}
endsnippet

